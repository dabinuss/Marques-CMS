{asset:css}/admin/assets/css/login-style.css{/asset}

<div class="login-container">

    <main class="main-content">

        <div class="login-header">
            <h1>{var:site_name}</h1>
            <p>{var:page_title}</p>
        </div>
        
        {var:error_message}
        
        {var:default_password_message}

        <form class="login-form" method="post" action="">
            <div class="form-group">
                <label for="username">Benutzername</label>
                <div class="input-icon-wrapper">
                    <span class="icon-input icon"><i data-lucide="user"></i></span>
                    <input type="text" id="username" name="username" value="{var:username}" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="password">Passwort</label>
                <div class="input-icon-wrapper">
                    <span class="icon-input icon"><i data-lucide="key-square"></i></span>
                    <input type="password" id="password" name="password" required>
                </div>
            </div>
            
            <button type="submit" class="submit-button">
                <span class="icon icon-20 icon-space-right"><i data-lucide="door-open"></i></span>
                Anmelden
            </button>

            <input type="hidden" name="csrf_token" value="{var:csrf_token}">
            <input type="hidden" name="redirect" value="{var:redirect}">
        </form>
        
        <div class="login-footer">
            <p>
                <span class="icon icon-12"><i data-lucide="copyright"></i></span>
                marques CMS v{var:version}</p>
        </div>

    </main>
</div>