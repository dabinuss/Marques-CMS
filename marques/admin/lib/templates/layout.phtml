<!DOCTYPE html>
<html lang="{var:admin_language}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{var:page_title} - {var:site_name}</title>
    
    <!-- CSS mittels Asset-Tags einbinden -->
    {asset:css}/assets/css/marques-panel-style.css{/asset}
    {asset:js type:module}/admin/assets/js/lucide.min.js{/asset}

    {render:assets:css}
    {render:assets:js}
</head>
<body>
    
ha<i data-lucide="menu"></i>ha

    {render:block:content}

    {asset:js inline:true nonce:{var:csp_nonce}}
        // Globale JS-Variablen
        window.csrfToken = '{var:csrf_token}';
        window.baseUrl = '{var:base_url}';
        window.adminBaseUrl = '{var:admin_url}';
    {/asset}

    {asset:js inline:true type:module nonce:{var:csp_nonce}}
        import { createIcons, icons } from 'lucide';
        createIcons({ icons });
    {/asset}

    {render:inline:js}
</body>
</html>