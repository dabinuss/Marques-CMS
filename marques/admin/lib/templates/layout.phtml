<!DOCTYPE html>
<html lang="{var:admin_language}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{var:page_title} - {var:site_name}</title>
    {src:css}{src:end}
    {block:head}
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        {block:sidebar}
        
        <!-- Hauptinhalt -->
        <main class="main-content">
            <div class="header">
                <h1>{var:page_title}</h1>
                <div class="header-actions">
                    {block:header}
                </div>
            </div>

            <!-- Content-Bereich -->
            {block:content}
        </main>
    </div>

    <!-- JavaScript -->
    <script>
        // Globale JS-Variablen
        window.csrfToken = '{var:csrf_token}';
        window.baseUrl = '{var:base_url}';
        window.adminBaseUrl = '{var:admin_url}';
    </script>
    
    {src:js}{src:end}
    {block:scripts}
</body>
</html>